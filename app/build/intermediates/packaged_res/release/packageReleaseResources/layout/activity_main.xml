<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:padding="16dp">

        <!-- 질문 텍스트 -->
        <TextView
            android:id="@+id/questionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:text="오늘 하루는 어땠나요?"
            android:textSize="20sp" />

        <!-- 설명 텍스트 -->
        <TextView
            android:id="@+id/subText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/questionText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="감정우표를 선택해주세요"
            android:textSize="16sp" />

        <!-- 행복한 감정 아이콘 -->
        <ImageView
            android:id="@+id/happy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/subText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:contentDescription="Happy"
            android:onClick="onEmotionClicked"
            android:src="@drawable/happy" />

        <!-- 들뜨고 흥분된 감정 아이콘 -->
        <ImageView
            android:id="@+id/excited"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/happy"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:contentDescription="Excited"
            android:onClick="onEmotionClicked"
            android:src="@drawable/excited" />

        <!-- 평범한 감정 아이콘 -->
        <ImageView
            android:id="@+id/normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/excited"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:contentDescription="Normal"
            android:onClick="onEmotionClicked"
            android:src="@drawable/normal" />

        <!-- 불안한 감정 아이콘 -->
        <ImageView
            android:id="@+id/worried"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/normal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:contentDescription="Worried"
            android:onClick="onEmotionClicked"
            android:src="@drawable/worried" />

        <!-- 화난 감정 아이콘 -->
        <ImageView
            android:id="@+id/angry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/worried"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:contentDescription="Angry"
            android:onClick="onEmotionClicked"
            android:src="@drawable/angry" />

    </RelativeLayout>
</LinearLayout>